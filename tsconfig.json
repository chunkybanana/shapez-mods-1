{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES6",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./src/**/*.js", "./types.d.ts", "./src/**/*.ts"],
    "exclude": ["./node_modules", "./build/**/*.mod.js", "./tools/*.js"]
}
