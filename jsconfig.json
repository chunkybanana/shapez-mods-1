{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["./build/*.mod.js", "./*.js"]
}
